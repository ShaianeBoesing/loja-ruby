<p style="color: green"><%= notice %></p>

<h1>Departamentos</h1>

<table class="table table-ordered table-hover">
  <thead>
      <tr>
          <td>Nome</td>
      </tr>
  </thead>
  <tbody>
  <% @departamentos.each do |departamento| %>
      <tr>
          <td><%= departamento.nome %></td>
          <td> 
            <%= button_to "Ver", departamento, method: :get, class:"btn btn-sm btn-primary" %>
          </td>
          <td> 
            <%= button_to "Editar", edit_departamento_path(departamento), method: :get, class:"btn btn-sm btn-secondary" %>
          </td>
          <td> 
            <%= button_to "Deletar", departamento, method: :delete, class:"btn btn-sm btn-danger" %>
          </td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= link_to "Novo Departamento", new_departamento_path, class:"btn btn-sm btn-success"%>
