<% @produto.errors.full_messages.each do |message| %>
    <div class="alert alert-danger" role="alert"> <%= message %> </div>
<% end %> 
<%=  form_for @produto do |form| %>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <%= form.label :nome %>
                <%= form.text_field :nome, class:"form-control" %>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <%= form.label :descricao %>
                <%= form.text_area :descricao, class:"form-control" %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <%= form.label :preco %>
                <%= form.number_field :preco, class:"form-control" %>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <%= form.label :quantidade %>
                <%= form.number_field :quantidade, class:"form-control" %>
            </div>
        </div>
    </div>
    <%= submit_tag("Criar") %>
<% end %>