<!DOCTYPE html>
<html>
  <head>
    <title>Loja</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <%= nav_bar brand: "Loja", brand_link: root_url, responsive: true do  %>
      <%= menu_group do %>
        <%= menu_item "Novo Produto", new_produto_path%>
        <%= menu_item "Departamentos", departamentos_path%>
      <% end %>
      <div class="form-group"> 
        <%= form_tag search_produto_path, method: :get, class:"navbar-form navbar-right" do %>
          <%= text_field_tag :nome, nil, class:"form-control" %>
          <%= button_to "Buscar", nil, class:"btn btn-default" %>
        <% end %>
      </div>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
